<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Z_SiginActivity"
    android:background="@drawable/background">

    <View
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="580dp"
        android:background="@drawable/sigin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvsBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="290dp"
        android:text="@string/back"
        android:textSize="20sp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinsmedium"
        android:textStyle="bold"
        android:textSize="25sp"
        android:text="Create Your Account"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintTop_toTopOf="@id/header" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:text="We're here to help you discover the best events"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="15sp"
        android:text="@string/ready"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/ets_name"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_inputsigin"
        android:layout_marginTop="40dp"
        android:paddingLeft="30dp"
        android:hint="Enter full name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/textView8"/>

    <EditText
        android:id="@+id/ets_email"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_inputsigin"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:hint="Enter email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/ets_name"/>

    <EditText
        android:id="@+id/ets_password"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_inputsigin"
        android:layout_marginTop="20dp"
        android:paddingLeft="30dp"
        android:hint="Enter password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="@color/grey"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/ets_email"/>

    <Button
        android:id="@+id/btns_sigin"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="@drawable/btn_siginsigin"
        android:layout_marginTop="20dp"
        android:text="Get Started"
        android:textColor="@color/white"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@+id/header"
        app:layout_constraintTop_toBottomOf="@+id/forgot"/>

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:layout_marginTop="10dp"
        android:layout_marginStart="230dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/tosca"
        app:layout_constraintTop_toBottomOf="@id/ets_password"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>